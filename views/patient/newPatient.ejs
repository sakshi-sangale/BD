<% layout('layouts/boilerplate') %>

  <div class="container">

    <div class="container-sm mx-5 px-5 mb-3">
      <div class="container-sm  px-5 border-rounded shadow-lg">
        <h2 class=" text-center pt-4 mt-3 text-dark">Need For Blood</h2>

        <form action="/patient" method="POST" class="form  px-5 mx-5">
          <div class="row p-2">
            <div class="col-6">
              <label for="firstName"> <strong> Name of Patient</strong></label>
              <input type="text" class="form-control" id="firstName" placeholder="First name" name="patient[firstName]">
            </div>
            <div class="col-6">
              <label for="lastName"></label>
              <input type="text" class="form-control" id="lastName" placeholder="Last name" name="patient[lastName]">
            </div>
          </div>

          <div class="row p-2">
            <div class="col p-2">
              <label for="dob"> <strong>Date Of Birth</strong> </label>
              <input type="date" class="form-control" id="dob" name="patient[dob]">
            </div>
            <div class="col p-2">
              <label for="age"> <strong>Age</strong> </label>
              <input type="number" class="form-control" id="age" name="patient[age]">
            </div>
          </div>

          <div class="row p-2">
            <div class="col p-2">
              <label for="bloodGroup"> <strong>Blood Group</strong> </label>
              <input type="text " class="form-control" id="bloodGroup" name="patient[bloodGroup]">
            </div>
            <div class="col p-2">
              <label for="unit"> <strong>Enter Unit</strong> </label>
              <input type="number" class="form-control" id="unit" name="patient[unit]">
            </div>
          </div>

          <div class="column p-2 ">
            <label for="gender m-2"> <strong>Gender</strong></label>
            <div class="form-check form-check-inline  " id="gender">
              <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1">
              <label class="form-check-label" for="inlineRadio1"> Male</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2">
              <label class="form-check-label" for="inlineRadio2">Female</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio3" value="option3">
              <label class="form-check-label" for="inlineRadio3">Other</label>
            </div>
          </div>

          <div class="row p-2">
            <div class="col p-2">
              <label for="hospital"> <strong>Hospital</strong></label>
              <input type="text" class="form-control" id="hospital" name="patient[hospital]">
            </div>
            <div class="col p-2">
              <label for="reason"> <strong>Reason</strong></label>
              <input type="text" class="form-control" id="reason" name="patient[reason]">
            </div>
          </div>

          <div class="row p-2">
            <div class="col-6">
              <label for="firstNameC"> <strong>Contact Person Name</strong></label>
              <input type="text" class="form-control" id="firstNameC" placeholder="First name" aria-label="First name"
                name="patient[firstNameC]">
            </div>
            <div class="col-6">
              <label for="lastNameC"></label>
              <input type="text" class="form-control" id="lastNameC" placeholder="Last name" name="patient[lastNameC]">
            </div>
          </div>

          <div class="row p-2">
            <div class="col p-2">
              <label for="eMail"> <strong>E-mail</strong></label>
              <input type="text" class="form-control" id="eMail" name="patient[eMail]">
            </div>
            <div class="col p-2">
              <label for="phoneNo"> <strong>Phone No.</strong></label>
              <input type="text" class="form-control" id="phoneNo" name="patient[phoneNo]">
            </div>
          </div>

          <div class="col p-2">
            <label for="address"> <strong>Address</strong></label>
            <input type="textarea" class="form-control" id="address" name="patient[address]">
          </div>
          <button class="btn btn-success my-2 ">Submit</button>

        </form>
      </div>

    </div>

  </div>